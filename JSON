<body>

<h2>Pretty JSON Viewer</h2>

<textarea id="jsonInput" rows="10" cols="80" placeholder="Paste your JSON here"></textarea>
<br><br>
<button onclick="prettyPrintJSON()">Format JSON</button>

<h3>Output:</h3>
<pre id="output"></pre>

<script>
function prettyPrintJSON() {
    const input = document.getElementById('jsonInput').value;
    try {
        const obj = JSON.parse(input);
        const pretty = JSON.stringify(obj, null, 2);
        document.getElementById('output').textContent = pretty;
    } catch (e) {
        document.getElementById('output').textContent = "Invalid JSON!";
    }
}
</script>

